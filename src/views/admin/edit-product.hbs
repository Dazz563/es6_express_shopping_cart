<main>
	<form class='product-form' action='{{#if editing}}/admin/edit-product{{else}}/admin/add-product{{/if}}' method='POST'>
		<div class='form-control'>
			<label for='title'>Title</label>
			<input type='text' name='title' id='title' value='{{#if editing}}{{product.title}}{{/if}}'/>
		</div>
		<div class='form-control'>
			<label for='imageUrl'>Image URL</label>
			<input type='text' name='imageUrl' id='imageUrl' value='{{#if editing}}{{product.imageUrl}}{{/if}}'/>
		</div>
		<div class='form-control'>
			<label for='price'>Price</label>
			<input type='number' name='price' id='price' step='0.01' value='{{#if editing}}{{product.price}}{{/if}}'/>
		</div>
		<div class='form-control'>
			<label for='description'>Description</label>
			<textarea name='description' id='description' rows='5'>{{#if editing}}{{product.description}}{{/if}}</textarea>
		</div>
        <input type='hidden' name='productId' value='{{#if editing}}{{product.id}}{{/if}}'/>
		{{#if editing}}
			<button class='btn' type='submit'>Edit Product</button>
		{{else}}
			<button class='btn' type='submit'>Add Product</button>
		{{/if}}
	</form>
</main>